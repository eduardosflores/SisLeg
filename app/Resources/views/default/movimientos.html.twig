				if (esOficinaComisiones && muestra_comisiones==1)
					$(".header-comision").removeClass("hidden");
				
				if (filas==0){
    
    				var html="";
    				debugger;
    				$("#selExpedientes > option").each(function(){
    					var texto=$(this).text();
    					var numero=texto.substring(0,texto.indexOf('('));
    					var folios=texto.substring(texto.indexOf('(')+1,texto.indexOf(')'));
    					html+="<tr><td class='hidden'>"+$(this).val()+"</td><td><input type='text' class='form-control text-center' readonly value='"+numero+"'></td>"+
