<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Perfil" table="perfil" inheritance-type="SINGLE_TABLE" repository-class="AppBundle\Repository\PerfilRepository">
    <discriminator-column name="discriminador" type="string" length="20"/>
    <discriminator-map>
        <discriminator-mapping value="basico" class="AppBundle\Entity\Perfil" />
        <discriminator-mapping value="legislador" class="AppBundle\Entity\PerfilLegislador" />
        <discriminator-mapping value="publico" class="AppBundle\Entity\PerfilPublico" />
    </discriminator-map>
    <lifecycle-callbacks>
            <lifecycle-callback type="postPersist" method="upload"/>
            <lifecycle-callback type="postUpdate" method="upload"/>
            <lifecycle-callback type="prePersist" method="almacenarImagen"/>
            <lifecycle-callback type="preUpdate" method="almacenarImagen"/>
            <lifecycle-callback type="preUpdate" method="removeImage"/>     
    </lifecycle-callbacks>
    <indexes>
      <index name="perfil_bloque_idx" columns="idBloque"/>
    </indexes>
    <id name="id" type="integer" column="idPerfil">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="imagen" type="string" column="imagen" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="apellidos" type="string" column="apellidos" length="70" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nombres" type="string" column="nombres" length="70" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="telefono" type="string" column="telefono" length="70" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="correoElectronico" type="string" column="correoElectronico" length="70" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="proyectos" target-entity="Proyecto" mapped-by="autores"/>
    <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="false">
    </field>
    <field name="usuarioCreacion" type="string" column="usuarioCreacion" length="70" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechaModificacion" type="datetime" column="fechaModificacion" nullable="true">
    </field>
    <field name="usuarioModificacion" type="string" column="usuarioModificacion" length="70" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
