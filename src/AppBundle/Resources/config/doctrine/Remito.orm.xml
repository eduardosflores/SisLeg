<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Remito" table="remito" repository-class="AppBundle\Repository\RemitoRepository">
  	<indexes>
  		<index columns="idOrigen" name="remito_oficinaOrigen_idx"/>
  		<index columns="idDestino" name="remito_oficinaDestino_idx"/>
  	</indexes>
    <id name="id" type="integer" column="idRemito">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="fechaRecepcion" type="datetime" column="fechaRecepcion" nullable="true">
    </field>
    <field name="numeroRemito" column="numeroRemito" type="integer" nullable="false">
    </field>
    <field name="anulado" type="boolean" column="anulado" nullable="true">
    </field>
    <field name="motivoAnulacion" type="string" column="motivoAnulacion" length="150" nullable="true">
    </field>
    <field name="usuarioCreacion" type="string" length="70" column="usuarioCreacion" nullable="false">
    </field>
    <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="false">
    </field>
    <field name="usuarioModificacion" type="string" length="70" column="usuarioModificacion" nullable="true">
    </field>
    <field name="fechaModificacion" type="datetime" column="fechaModificacion" nullable="true">
    </field>
    <one-to-many field="movimientos" mapped-by="remito" target-entity="Movimiento" orphan-removal="true">
    	<cascade>
    		<cascade-persist/>
    		<cascade-remove/>
    	</cascade>
    </one-to-many>
    <many-to-one field="destino" target-entity="Oficina">
    	<join-columns>
    		<join-column name="idDestino" referenced-column-name="idOficina"/>
    	</join-columns>
    </many-to-one>
    <many-to-one field="origen" target-entity="Oficina">
    	<join-columns>
    		<join-column name="idOrigen" referenced-column-name="idOficina"/>
    	</join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
