<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Comision" table="comision">
     <indexes>
      <index name="comision_tipoComision_idx" columns="idTipoComision"/>
      <index name="comision_perfilPresidente_idx" columns="idPerfilPresidente"/>
      <index name="comision_perfilVicePresidente_idx" columns="idPerfilVicePresidente"/>
    </indexes>
    <id name="id" type="integer" column="idComision">
      <generator strategy="IDENTITY"/>
    </id>
    <many-to-one field="presidente" target-entity="PerfilLegislador">
      <join-column name="idPerfilPresidente" referenced-column-name="idPerfil" />
    </many-to-one>
    <many-to-one field="vicePresidente" target-entity="PerfilLegislador">
      <join-column name="idPerfilVicePresidente" referenced-column-name="idPerfil" />
    </many-to-one>
    <many-to-many field="titulares" target-entity="PerfilLegislador" orphan-removal="true">
      <join-table name="comision_legisladorTitular">
          <join-columns>
              <join-column name="idComision" referenced-column-name="idComision" />
          </join-columns>
          <inverse-join-columns>
              <join-column name="idPerfil" referenced-column-name="idPerfil" />
          </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="suplentes" target-entity="PerfilLegislador" orphan-removal="true">
      <join-table name="comision_legisladorSuplente">
          <join-columns>
              <join-column name="idComision" referenced-column-name="idComision" />
          </join-columns>
          <inverse-join-columns>
              <join-column name="idPerfil" referenced-column-name="idPerfil"/>
          </inverse-join-columns>
      </join-table>
    </many-to-many>
    <one-to-many field="expedientesAsignados" target-entity="ExpedienteComision" mapped-by="comision"/>
    <field name="comision" type="string" column="comision" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="tipoComision" target-entity="TipoComision" fetch="LAZY" nullable="false">
      <join-columns>
        <join-column name="idTipoComision" referenced-column-name="idTipoComision"/>
      </join-columns>
    </many-to-one>
    <field name="activa" type="boolean" column="activa" nullable="false"/>
  </entity>
</doctrine-mapping>
