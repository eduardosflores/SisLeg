<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\ProyectoRevision" table="proyectoRevision">
    <indexes>
      <index name="proyectoRevision_proyecto_idx" columns="idProyecto"/>
      <index name="proyectoRevision_oficina_idx" columns="idOficina"/>
    </indexes>
    <id name="id" type="integer" column="idProyectoRevision">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="incluyeVistosYConsiderandos" type="boolean" column="incluyeVistosYConsiderandos" 
    		nullable="false">
    </field>
    <field name="visto" type="text" column="visto" nullable="false">
    </field>
    <field name="considerandos" type="text" column="considerandos" nullable="false">
    </field>
    <field name="articulos" type="json_array" column="articulos" nullable="false">
    </field>
    <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="false">
    </field>
    <field name="usuarioCreacion" type="string" column="usuarioCreacion" length="70" 
           nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechaModificacion" type="datetime" column="fechaModificacion" nullable="true"  >
    </field>
     <field name="usuarioModificacion" type="string" column="usuarioModificacion" length="70" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="proyecto" target-entity="Proyecto"> 
    	<join-columns>
    		<join-column name="idProyecto" referenced-column-name="idProyecto"/>
    	</join-columns>
    </many-to-one>
    <many-to-one field="oficina" target-entity="Oficina" fetch="LAZY">
      <join-columns>
        <join-column name="idOficina" referenced-column-name="idOficina"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
