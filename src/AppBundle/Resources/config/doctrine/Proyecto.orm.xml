<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Proyecto" table="proyecto" repository-class="AppBundle\Repository\ProyectoRepository">
    <indexes>
      <index name="proyecto_tipoProyecto_idx" columns="idTipoProyecto"/>
      <index name="proyecto_concejal_idx" columns="idConcejal"/>
    </indexes>
    <unique-constraints>
      <unique-constraint columns="idExpediente" name="UNIQ_proyecto_expediente_idx" />
     <!--  <unique-constraint columns="idUltimaRevision" name="UNIQ_proyecto_ultimaRevision_idx"/> -->
    </unique-constraints>
    <id name="id" type="integer" column="idProyecto">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="clavesBusqueda" type="string" column="clavesBusqueda" length="120" nullable="false">
    </field>
    <field name="visto" type="text" column="visto" nullable="false">
    </field>
    <field name="considerandos" type="text" column="considerandos" nullable="false">
    </field>
    <field name="articulos" type="json_array" column="articulos" nullable="false">
    </field>
    <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="false">
    </field>
    <field name="usuarioCreacion" type="string" column="usuarioCreacion" length="70" 
           nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechaModificacion" type="datetime" column="fechaModificacion" nullable="true"  >
    </field>
     <field name="usuarioModificacion" type="string" column="usuarioModificacion" length="70" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <!--  	<one-to-one field="ultimaRevision" target-entity="ProyectoRevision">
		      <join-columns>
		        <join-column name="idUltimaRevision" referenced-column-name="idProyectoRevision"/> 
		      </join-columns>
		    </one-to-one> 
    -->
    <one-to-one field="expediente" target-entity="Expediente" inversed-by="proyecto" fetch="LAZY">
      <join-columns>
        <join-column name="idExpediente" referenced-column-name="idExpediente"/>
      </join-columns>
    </one-to-one>
    <!-- 	<one-to-many field="firmas" target-entity="ProyectoFirma" mapped-by="proyecto">
		      <cascade>
		        <cascade-persist/>
		      </cascade>
		    </one-to-many> 
    -->
    <many-to-one field="tipoProyecto" target-entity="TipoProyecto" fetch="LAZY">
      <join-columns>
        <join-column name="idTipoProyecto" referenced-column-name="idTipoProyecto"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="concejal" target-entity="PerfilLegislador">
    	<join-columns>
    		<join-column name="idConcejal" referenced-column-name="idPerfil"/>
    	</join-columns>
    </many-to-one>
    <!-- 	<many-to-many field="concejales" target-entity="Perfil" fetch="EAGER" orphan-removal="true">
		      <join-table name="legisladores_proyectos">
		        <join-columns>
		          <join-column name="idProyecto" referenced-column-name="idProyecto"/>
		        </join-columns>
		        <inverse-join-columns>
		          <join-column name="idPerfil" referenced-column-name="idPerfil"/>
		        </inverse-join-columns>
		      </join-table>
		    </many-to-many> 
    -->
  </entity>
</doctrine-mapping>
