<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Expediente" table="expediente" repository-class="AppBundle\Repository\ExpedienteRepository">
    <indexes>
      <index name="expediente_tipoExpediente_idx" columns="idTipoExpediente"/>
      <index name="expediente_estadoExpediente_idx" columns="idEstadoExpediente"/>
      <index name="expediente_oficina_idx" columns="idOficina"/>
    </indexes>
    <unique-constraints>
            <unique-constraint columns="numeroExpediente" name="numeroExpediente_idx" />
        </unique-constraints>
    <lifecycle-callbacks>
            <lifecycle-callback type="postPersist" method="upload"/>
            <lifecycle-callback type="postUpdate" method="upload"/>
            <lifecycle-callback type="prePersist" method="listarImagenes"/>
            <lifecycle-callback type="preUpdate" method="listarImagenes"/>
            <lifecycle-callback type="preUpdate" method="removeSingleImage"/>     
    </lifecycle-callbacks>
    <id name="id" type="integer" column="idExpediente">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="hashId" type="string" column="hashId" length="32" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="numeroExpediente" type="string" column="numeroExpediente" length="50" 
           nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="caratula" type="string" column="caratula" length="500" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="folios" type="string" column="folios" length="4" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="apellidosSiParticular" type="string" column="apellidosSiParticular" length="80" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nombresSiParticular" type="string" column="nombresSiParticular" length="80" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="listaImagenes" type="object" column="listaImagenes" nullable="true">
    </field>
    <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="false"/>
    <field name="usuarioCreacion" type="string" column="usuarioCreacion" length="70" 
           nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechaModificacion" type="datetime" column="fechaModificacion" nullable="true"/>
     <field name="usuarioModificacion" type="string" column="usuarioModificacion" length="70" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechaAprobacion" type="datetime" column="fechaAprobacion" nullable="true">
    </field>
    <field name="usuarioAprobacion" type="string" column="usuarioAprobacion" length="70" 
           nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <one-to-one field="proyecto" target-entity="Proyecto" mapped-by="expediente" orphan-removal="true">
    	<cascade>
    		<cascade-persist/>
    		<cascade-remove/>
    	</cascade>
    </one-to-one>  
    <one-to-many field="movimientos" mapped-by="expediente" target-entity="Movimiento" orphan-removal="true">
    	<cascade>
    		<cascade-persist/>
    		<cascade-remove/>
    	</cascade>
    </one-to-many>
    <many-to-one field="estadoExpediente" target-entity="EstadoExpediente" fetch="LAZY">
      <join-columns>
        <join-column name="idEstadoExpediente" referenced-column-name="idEstadoExpediente"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="tipoExpediente" target-entity="TipoExpediente">
      <join-columns>
        <join-column name="idTipoExpediente" referenced-column-name="idTipoExpediente"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="oficinaActual" target-entity="Oficina">
      <join-columns>
        <join-column name="idOficina" referenced-column-name="idOficina"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
