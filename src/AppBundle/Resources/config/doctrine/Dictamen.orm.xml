<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Dictamen" table="dictamen" inheritance-type="SINGLE_TABLE">
    <indexes>
      <index name="dictamen_proyectoRevision_idx" columns="idProyectoRevision"/>
      <index name="dictamen_tipoProyecto_idx" columns="idTipoDictamen"/>
      <index name="dictamen_sesion_idx" columns="idSesion"/>
    </indexes>
    <discriminator-column name="discriminador" type="string" length="15"/>
    <discriminator-map>
        <discriminator-mapping value="basico" class="AppBundle\Entity\Dictamen" />
        <discriminator-mapping value="articulado" class="AppBundle\Entity\DictamenArticulado" />
        <discriminator-mapping value="revision" class="AppBundle\Entity\DictamenRevision"/>
    </discriminator-map>
    <id name="id" type="integer" column="idDictamen">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="usuarioCreacion" type="string" column="usuarioCreacion" length="70" nullable="false">
    </field>
    <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="false">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field> 
    <field name="textoLibre" type="text" column="textoLibre" nullable="false">
    </field>
    <many-to-one field="sesion" target-entity="Sesion">
    	<join-columns>
    		<join-column name="idSesion" referenced-column-name="idSesion"/>
    	</join-columns>
    </many-to-one>
    <many-to-many field="concejales" target-entity="PerfilLegislador">
    	<join-table name="dictamen_legislador">
    		<join-columns>
    			<join-column name="idDictamen" referenced-column-name="idDictamen"/>
    		</join-columns>
    		<inverse-join-columns>
    			<join-column name="idPerfil" referenced-column-name="idPerfil"/>
    		</inverse-join-columns>
    	</join-table>
    </many-to-many> 
    <many-to-many field="asignacionesPorMayoria" mapped-by="dictamenesMayoria" target-entity="ExpedienteComision">
	    <cascade>
	    	<cascade-persist/>
	    </cascade>
    </many-to-many>
    <many-to-many field="asignacionesPorPrimeraMinoria" mapped-by="dictamenesPrimeraMinoria" 
    			 target-entity="ExpedienteComision">
    </many-to-many>
    <many-to-many field="asignacionesPorSegundaMinoria" mapped-by="dictamenesSegundaMinoria" 
    			 target-entity="ExpedienteComision">
	    <cascade>
	    	<cascade-persist/>
	    </cascade>
    </many-to-many>
  </entity>  
</doctrine-mapping>
