<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Rol" table="rol">
  	<indexes>
  		<index columns="IdOficina" name="rol_oficina_idx"></index>
  	</indexes>
    <id name="id" type="smallint" column="idRol">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="rol" type="string" column="rol" length="45" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="oficinaObligatoria" type="boolean" column="oficinaObligatoria" nullable="false">
    </field>
     <field name="activo" type="boolean" column="activo" nullable="false">
    </field>
    <many-to-one field="oficina" target-entity="Oficina">
    	<join-columns>
    		<join-column name="idOficina" referenced-column-name="idOficina"/>
    	</join-columns>
    </many-to-one>
    <many-to-many field="menus" target-entity="Menu" orphan-removal="true">
    	<join-table name="rol_menu">
    		<join-columns>
    			<join-column name="idRol" referenced-column-name="idRol"/>
    		</join-columns>
    		<inverse-join-columns>
    			<join-column name="idMenu" referenced-column-name="idMenu"/>
    		</inverse-join-columns>
    	</join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
