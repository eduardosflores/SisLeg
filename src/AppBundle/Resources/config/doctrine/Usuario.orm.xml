<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Usuario" table="usuario">
    <indexes>
      <index name="usuario_rol_idx" columns="idRol"/>
    </indexes>
    <unique-constraints>
      <unique-constraint columns="usuario" name="UNIQ_usuario_idx" />
      <unique-constraint columns="idPerfil" name="UNIQ_usuario_perfil_idx" />
    </unique-constraints>
    <id name="id" type="integer" column="idUsuario">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="usuario" type="string" column="usuario" length="70" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="clave" type="string" column="clave" length="100" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="activo" type="boolean" column="activo" nullable="false"/>
    <one-to-one field="perfil" target-entity="Perfil" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="idPerfil" referenced-column-name="idPerfil" nullable="false" fetch="LAZY"/>
      </join-columns>
    </one-to-one>
    <many-to-one field="rol" target-entity="Rol" nullable="false" fetch="LAZY">
      <join-columns>
        <join-column name="idRol" referenced-column-name="idRol"/>
      </join-columns>
    </many-to-one>
    <field name="fechaCreacion" type="datetime" column="fechaCreacion" nullable="false">
    </field>
    <field name="usuarioCreacion" type="string" column="usuarioCreacion" length="70" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechaModificacion" type="datetime" column="fechaModificacion" nullable="true">
    </field>
    <field name="usuarioModificacion" type="string" column="usuarioModificacion" length="70" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
