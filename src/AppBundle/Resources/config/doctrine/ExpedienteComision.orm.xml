<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\ExpedienteComision" table="expedienteComision">
    <indexes>
      <index name="expedienteComision_expediente_idx" columns="idExpediente"/>
      <index name="expedienteComision_comision_idx" columns="idComision"/>
    </indexes>
    <unique-constraints>
    	<unique-constraint columns="idDictamen" name="UNIQ_expedienteComision_dictamen_idx"/>
    </unique-constraints>
    <id name="id" type="integer" column="idExpedienteComision">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="fechaAsignacion" type="datetime" column="fechaAsignacion" nullable="false">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <field name="asignacionActual" type="boolean" column="asignacionActual" nullable="false">
    </field>
    <one-to-one field="dictamen" target-entity="Dictamen">
    	<join-columns>
    		<join-column name="idDictamen" referenced-column-name="idDictamen"/>
    	</join-columns>
    </one-to-one>
    <many-to-one field="comision" target-entity="Comision" inversed-by="expedientesAsignados">
      <join-columns>
        <join-column name="idComision" referenced-column-name="idComision"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="expediente" target-entity="Expediente" inversed-by="asignacionComisiones">
      <join-columns>
        <join-column name="idExpediente" referenced-column-name="idExpediente"/> 
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
